					&lt;/div&gt;
				&lt;/div&gt;
			&lt;/div&gt;
		&lt;/div&gt;
		&lt;div class=&quot;control-group&quot;&gt;
			&lt;div class=&quot;controls&quot;&gt;
				&lt;input type=&quot;text&quot; class=&quot;input-text input-block-level&quot; placeholder=&quot;City&quot;&gt;
			&lt;/div&gt;
		&lt;/div&gt;
		&lt;div class=&quot;control-group&quot;&gt;
			&lt;div class=&quot;row-fluid&quot;&gt;
				&lt;div class=&quot;span6&quot;&gt;
					&lt;div class=&quot;controls&quot;&gt;
						{{&gt; atoms-select-state }}
					&lt;/div&gt;
				&lt;/div&gt;
				&lt;div class=&quot;span6&quot;&gt;
