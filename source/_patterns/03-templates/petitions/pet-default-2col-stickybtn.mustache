<div id="page" class="sbx petitions petitions-view-petition lay-2col">

	{% comment %}Stickybar Form Toggle{% endcomment %}
	{% assign formtoggle_type = 'sticky' %}
	{% assign formtoggle_btn_customcss = 'btn-small w90' %}
	{{> organisms-pet-formtoggle }}

	{{> organisms-pet-pageheader }}

	<div class="row-fluid">
		<div class="span8 petitions-col-main">	
						
			{{> organisms-pet-media }}
			{{> organisms-pet-progress }}
			{{> organisms-pet-pageintro }}

			{% comment %}Inline Form Toggle{% endcomment %}
			{% assign formtoggle_type = '' %}
			{% assign formtoggle_btn_customcss = '' %}
			{{> organisms-pet-formtoggle }}

			{{> organisms-pet-letter }}
			{{> organisms-pet-supporters }}
			{{> organisms-pet-socialshare }}
			{{> organisms-pet-pageoutro }}
		</div>
		<div class="span4 petitions-col-sidebar">
			<div class="petitions-sidebar" id="petitionSidebar">
				{% assign form_customcss = 'form-l-vert-w100 form-cg-mrg-small' %}
				{% assign section_form_customcss = 'hidden-phone' %}
				{% include "organisms/org-form" with {{form_sidebar_customcss}} %}
				{{> organisms-pet-form }}
			</div>
		</div>
	</div>
</div>